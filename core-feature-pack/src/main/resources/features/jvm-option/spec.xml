<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="jvm-option" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="list-add">
    <elem name="addr-params" value="host,jvm"/>
    <elem name="op-params" value="jvm-option"/>
    <elem name="op-params-mapping" value="jvm-options"/>
  </annotation>
  <refs>
    <ref feature="host" nillable="true"/>
    <ref feature="jvm"/>
  </refs>
  <params>
    <param name="host" feature-id="true"/>
    <param name="jvm" default="default" feature-id="true"/>
    <param name="jvm-option" feature-id="true"/>
  </params>
</feature-spec>
