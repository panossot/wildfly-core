<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="io-buffer-pool" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,buffer-pool"/>
  </annotation>
  <provides>
    <capability name="$profile.org.wildfly.io.buffer-pool.$buffer-pool"/>
  </provides>
  <refs>
    <ref feature="io"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="buffer-pool" default="default" feature-id="true"/>
  </params>
</feature-spec>
