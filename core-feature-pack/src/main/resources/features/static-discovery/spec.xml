<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="static-discovery" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host-feature,core-service,static-discovery"/>
    <elem name="addr-params-mapping" value="host,core-service,static-discovery"/>
  </annotation>
  <refs>
    <ref feature="discovery-options">
      <param name="host-feature" maps-to="host"/>
      <param name="core-service" maps-to="core-service"/>
    </ref>
  </refs>
  <params>
    <param name="host-feature" feature-id="true"/>
    <param name="core-service" feature-id="true"/>
    <param name="static-discovery" feature-id="true"/>
    <param name="protocol"/>
    <param name="host"/>
    <param name="port"/>
  </params>
</feature-spec>
