<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="logging-rotating-file-handler" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,periodic-rotating-file-handler"/>
    <elem name="op-params" value="level,named-formatter,file,suffix,append,autoflush"/>
  </annotation>
  <refs>
    <ref feature="logging"/>
    <ref feature="logging-formatter">
      <param name="host" maps-to="host"/>
      <param name="profile" maps-to="profile"/>
      <param name="subsystem" maps-to="subsystem"/>
      <param name="named-formatter" maps-to="pattern-formatter"/>
    </ref>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="periodic-rotating-file-handler" feature-id="true" default="FILE"/>
    <param name="level" nillable="true"/>
    <param name="named-formatter" default="PATTERN"/>
    <param name="relative-to" default="jboss.server.log.dir"/>
    <param name="file" default="{relative-to=jboss.server.log.dir,path=server.log}"/>
    <param name="suffix" default=".yyyy-MM-dd"/>
    <param name="append" default="true"/>
    <param name="autoflush" default="true"/>
  </params>
</feature-spec>
