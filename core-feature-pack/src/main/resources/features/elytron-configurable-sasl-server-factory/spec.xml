<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="elytron-configurable-sasl-server-factory" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,configurable-sasl-server-factory"/>
    <elem name="op-params" value="sasl-server-factory,properties"/>
  </annotation>
  <refs>
    <ref feature="elytron"/>
    <ref feature="elytron-mechanism-filtering-sasl-server-factory">
      <param name="host" maps-to="host"/>
      <param name="profile" maps-to="profile"/>
      <param name="subsystem" maps-to="subsystem"/>
      <param name="sasl-server-factory" maps-to="mechanism-provider-filtering-sasl-server-factory"/>
    </ref>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="configurable-sasl-server-factory" feature-id="true"/>
    <param name="sasl-server-factory"/>
    <param name="properties"/>
  </params>
</feature-spec>
