<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="root-logger" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,root-logger"/>
    <elem name="op-params" value="level,handlers"/>
  </annotation>
  <refs>
    <ref feature="logging"/>
    <ref feature="profile" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="root-logger" default="ROOT" feature-id="true"/>
    <param name="level" default="INFO"/>
    <param name="handlers" default="[&quot;CONSOLE&quot;,&quot;FILE&quot;]"/>
  </params>
</feature-spec>
