<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="elytron-aggregate-providers" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,aggregate-providers"/>
    <elem name="op-params" value="providers"/>
  </annotation>
  <annotation name="write-attribute">
    <elem name="addr-params" value="host,profile,subsystem"/>
    <elem name="op-params" value="aggregate-providers"/>
    <elem name="op-params-mapping" value="final-providers"/>
  </annotation>
  <refs>
    <ref feature="elytron"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="aggregate-providers" feature-id="true"/>
    <param name="providers" nillable="false"/>
  </params>
</feature-spec>
