<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="logging-console-handler" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,profile,subsystem,console-handler"/>
    <elem name="op-params" value="level,named-formatter"/>
  </annotation>
  <refs>
    <ref feature="logging"/>
    <ref feature="logging-formatter">
      <param name="host" maps-to="host"/>
      <param name="profile" maps-to="profile"/>
      <param name="subsystem" maps-to="subsystem"/>
      <param name="named-formatter" maps-to="pattern-formatter"/>
    </ref>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="console-handler" feature-id="true" default="CONSOLE"/>
    <param name="level" default="INFO"/>
    <param name="named-formatter" default="COLOR-PATTERN"/>
  </params>
</feature-spec>
