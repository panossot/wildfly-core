<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="management-interface-http-interface" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,core-service,management-interface"/>
  </annotation>
  <provides>
    <capability name="org.wildfly.management.http.extensible"/>
    <capability name="org.wildfly.management.$management-interface"/>
  </provides>
  <requires>
    <capability name="org.wildfly.network.socket-binding.$socket-binding" optional="true"/>
  </requires>
  <refs>
    <ref feature="host" nillable="true"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="core-service" default="management" feature-id="true"/>
    <param name="management-interface" default="http-interface" feature-id="true"/>
    <param name="security-realm" default="ManagementRealm"/>
    <param name="http-upgrade" nillable="true"/>
    <param name="socket-binding" nillable="true"/>
    <param name="interface" nillable="true"/>
    <param name="port" nillable="true"/>
  </params>
</feature-spec>
