<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="elytron-security-domain-realm" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="list-add">
    <elem name="addr-params" value="host,profile,subsystem,security-domain"/>
    <elem name="op-params" value="realm"/>
    <elem name="op-params-mapping" value="realms"/>
  </annotation>
  <refs>
    <ref feature="elytron-security-domain"/>
  </refs>
  <params>
    <param name="host" default="PM_UNDEFINED" feature-id="true"/>
    <param name="profile" default="PM_UNDEFINED" feature-id="true"/>
    <param name="subsystem" feature-id="true"/>
    <param name="security-domain" feature-id="true"/>
    <param name="realm" nillable="false"/>
  </params>
</feature-spec>
