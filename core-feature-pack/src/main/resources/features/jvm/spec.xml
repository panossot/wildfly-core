<?xml version="1.0" encoding="UTF-8"?>
<feature-spec name="jvm" xmlns="urn:wildfly:pm-feature-spec:1.0">
  <annotation name="add">
    <elem name="addr-params" value="host,jvm"/>
  </annotation>
  <refs>
    <ref feature="host" nillable="true"/>
  </refs>
  <params>
    <param name="host" feature-id="true"/>
    <param name="jvm" default="default" feature-id="true"/>
    <param name="heap-size" nillable="true"/>
    <param name="max-heap-size" nillable="true"/>
    <param name="jvm-options" nillable="true"/>
    <param name="environment-variables" nillable="true"/>
  </params>
</feature-spec>
